         <div id="rating">
          <header class='header text-center' style="padding: 0;">
            <h5>Rate <%=campground.name %></h5>
        </header>
        
        <section class='rating-widget'>
          
          <!-- Rating Stars Box -->
          <div class='rating-stars text-center'>
            <form  id="rating-form" action="/campgrounds/<%= campground._id%>/rating" method="POST">
            <ul id='stars'  >
            
              <li class='star'  title='Poor' data-value='1' >
                <input type="radio" name="rating"  value=1>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star'  title='Fair' data-value='2'>
                <input type="radio" name="rating"  value=2>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='Good' data-value='3'>
                <input type="radio" name="rating"  value=3>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='Excellent' data-value='4'>
                <input type="radio" name="rating"  value=4>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='WOW!!!' data-value='5'>
                <input type="radio" name="rating"  value=5>
                <i class='fa fa-star fa-fw'></i>
              </li>
            </ul>
          </form>
          
          <textarea rows="4" cols="50" name="comment" form="rating-form"></textarea>
          </div>  
         </div> 

         <% var count = 0; %>
         <% for(var camp of allCampgrounds){ %>
           <% if(count >= 10) { %>
             <% break; %>
           <% } %>
           <% if(camp._id == campground.id) { %>
             <% continue; %>
           <% } %>
           <li class="list-group-item spot-list">
             <div class="media ">
               <div class="media-left">
                 <img class="media-object sideshow-image" src="<%= camp.image %>" alt="...">
               </div>
               <div class="media-body">
                 <h6 class="media-heading"><a href="/spots/<%= camp._id %>"><%= camp.name %></a></h6>
                 <span class="short-side-description">
                   <%- camp.description.substring(0, 55) %>
                 </span>
               </div>
             </div>
           </li>
           <% count++; %>
         <% } %>
