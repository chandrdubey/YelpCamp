<%- include ("../partials/header") %>
<div class="container page-styles"> 
    <div class="form group-row">
   <div class="form-style justify-content-center  p-3 bg">
    <h4  class="text-center">Add new comment to <%= campground.name %> </h4>
       <form action="/campgrounds/<%= campground._id%>/comments " method="POST">
           <div class="form-group">
              <input type="text" class="form-control " name="comment[text]" placeholder="text"> 
           </div> 
           <div class="form-group">        
              <button class="btn btn-primary btn-block">Submit!</button>
           </div>  
       </form>
           <a href="/campgrounds">Go back!</a>   
   </div>
</div> 
</div>

