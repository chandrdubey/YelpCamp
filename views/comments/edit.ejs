<%- include ("../partials/header") %>
<div class="container page-styles"> 
    <div class="form group-row">
   
   <div class="form-style justify-content-center  p-3 bg">
      <h4 class="text-center">Edit Comment</h4>
       <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
           <div class="form-group">
              <input type="text" class="form-control " name="comment[text]" value="<%= comment.text %> "> 
           </div> 
           <div class="form-group">        
              <button class="btn btn-primary btn-block">Submit!</button>
           </div>  
       </form>
           <a href="/campgrounds">Go back!</a>   
   </div>
</div> 
</div>

